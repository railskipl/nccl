 

 <div id="content">
 	<p class='buttons'>
 		
 		<%= link_to  "Add Press Release", new_admin_press_path, :class => 'button positive' %>
 		</p>
		<p class='clear'></p>
		   

			<table class="admintable">
			  <tr class="admintablehd">
			    <td width="25%">Title</td>
			    <td width="27%" style="text-align: center !important;">Action</td>
			  </tr>
			
			<% @presses.each do |press| %>
			  <tr>
			    <td><%= press.title %></td>
			    <td style="text-align: center !important;">
			   	 <%= link_to "Show", admin_press_path(press), :class=>'button positive' %> &nbsp;&nbsp;
			   	<%= link_to "Edit", edit_admin_press_path(press), :class=>'button positive' %> &nbsp;&nbsp; 
				<%= link_to "Delete", admin_press_path(press), :method=> :delete, :confirm => "Are you sure?", :class=>'button negative' %>

				</td>
			    
			  </tr>
			<% end %>
			</table>
			
			<br />
</div>